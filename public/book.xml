<?xml version="1.0" encoding="UTF-8"?>

<!-- Example of book -->
<ns1:book
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns:ns1='http://it.bmc.uu.se/compdept/slimbook'
    xsi:schemaLocation='http://it.bmc.uu.se/compdept/slimbook slimbook.xsd'>
    <!-- Book information -->
    <ns1:info>
        <ns1:title>Book title</ns1:title>
        <ns1:date>1970-01-01</ns1:date>
        <ns1:version>1.0</ns1:version>
        <ns1:author>
            <ns1:name>Anders LÃ¶vgren</ns1:name>
            <ns1:email>anders.lovgren@bmc.uu.se</ns1:email>
        </ns1:author>
    </ns1:info>
    
    <!-- Chapters can have zero or more paragraphs -->
    <ns1:chapter title="Chapter 1" name="chap1">
    </ns1:chapter>
    
    <ns1:chapter title="Chapter 2" name="chap2">
        <ns1:paragraph title="Section 1" name="para1">
        </ns1:paragraph>
    </ns1:chapter>    
    
    <ns1:chapter title="Chapter 3" name="chap3">
        <ns1:paragraph title="Section 1" name="para1">
